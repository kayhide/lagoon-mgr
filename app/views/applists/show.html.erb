<%- model_class = Applist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:google_play_url) %>:</strong></dt>
  <dd><%= @applist.google_play_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:itunes_url) %>:</strong></dt>
  <dd><%= @applist.itunes_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_scraped) %>:</strong></dt>
  <dd><%= @applist.is_scraped %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              applists_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_applist_path(@applist), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              applist_path(@applist),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
